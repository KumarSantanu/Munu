<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rl_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/lightPeach"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_logo" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aciv_share_app"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/share"
            android:focusable="true"
            android:padding="14dp"
            android:src="@drawable/ic_share"/>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_main_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:text="@string/app_tag_line"
                android:textAlignment="center"
                android:textSize="20sp"
                app:fontFamily="@font/playfair_display_bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/lightPeach"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/aciv_big_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    tools:layout_height="500dp" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/actv_write_note"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/default_bg_with_ripple"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:maxLines="1"
                android:text="@string/write_me_note"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:fontFamily="@font/roboto" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/lightPeach"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/actv_privacy_policy"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:ellipsize="end"
                        android:focusable="true"
                        android:background="@drawable/default_bg_with_ripple"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/privacy_policy"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/roboto" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/actv_term_condition"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:ellipsize="end"
                        android:focusable="true"
                        android:gravity="center"
                        android:background="@drawable/default_bg_with_ripple"
                        android:maxLines="1"
                        android:text="@string/terms_conditions"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/roboto" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/app_copyright"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    app:fontFamily="@font/roboto" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>